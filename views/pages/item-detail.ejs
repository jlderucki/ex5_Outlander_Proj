<div class="container mt-4 detail_page">
  <div class="row mb-3">
    <div class="col-md-12">
      <article class="itemslist maincontent">
        <h1 class="itemslist-title"><%=item.title%></h1>
        <div class="itemslist-name">
          <p> Location: <%=item.location%></p>
          <p>Category:
          <a href="/categories/<%=item.category%>"><%=item.category%></a></p>
        </div>
        <p class="itemslist-info mt-2">
          <a href="/items/<%=item.id%>"> </a>
          <img
            class="itemsdetaillist-img img-fluid"
            src="<%=item.image%>"
            alt="Photo of <%=item.name%>" width="800"
          /></p>
          <p class="photocredit">
          <span class="iconify" data-icon="bi:camera" data-inline="false"></span>: <a href="<%=item.credit%>" target="_blank"><%=item.photographer%></a>
        </p>
        <h4 class="mt-3">About <%=item.title%></h4>
        <p><%-item.description%></p>
      </article>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-md-6">
      <div class="embed-responsive embed-responsive-16by9 mb-3">
      <iframe class="video embed-responsive-item" width="500" height="300" src="<%=item.video%>" title="YouTube video player" allowfullscreen></iframe>
      </div>
    </div>
    <div class="col-md-6" id="map">
      <div class="embed-responsive embed-responsive-16by9">
      <iframe class="map" width="400" height="250" src="https://www.google.com/maps/embed/v1/place?key=AIzaSyAYNPvg8eY4uMfhvGPdyOyl6nkU64a211k&q=<%=item.location%>&center=<%=item.lat%>,<%=item.long%>&zoom=<%=item.zoom%>" allowfullscreen></iframe>
    </div>
    </div>
  </div>
</div>
